@model List<Student>
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body class="container">
    <a href="Student/Create" class="btn btn-primary">Add Student</a>
    <table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            <tr>

                <td>@std.Id</td>
                <td>@std.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@std.Id" class="btn btn-primary">Edit Student</a>
                    <a asp-action="Details" asp-route-id="@std.Id" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@std.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    </table>
</body>
</html>

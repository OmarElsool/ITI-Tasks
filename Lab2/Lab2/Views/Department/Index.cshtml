@model List<Department>
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    
</head>
<body class="container">
    <a asp-action="Create" class="btn btn-primary">Add Department</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Capacity</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>

                    <td>@dept.DeptId</td>
                    <td>@dept.DepartmentName</td>
                    <td>@dept.Capacity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@dept.DeptId" class="btn btn-primary">Edit Department</a>
                        <a asp-action="Details" asp-route-id="@dept.DeptId" class="btn btn-secondary">Details</a>
                        <a onclick="return confirm('Are You Sure')" asp-action="Delete" asp-route-id="@dept.DeptId" class="btn btn-danger confirmDelete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
